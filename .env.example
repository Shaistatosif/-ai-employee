# Personal AI Employee System - Environment Configuration
# Copy this file to .env and fill in your credentials
# NEVER commit .env to version control!

# =============================================================================
# MANDATORY CREDENTIALS
# =============================================================================

# Gmail API (https://console.cloud.google.com/apis/credentials)
GMAIL_CLIENT_ID=your_client_id_here
GMAIL_CLIENT_SECRET=your_client_secret_here
GMAIL_REFRESH_TOKEN=your_refresh_token_here

# Neon PostgreSQL Database (https://neon.tech)
NEON_DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/dbname?sslmode=require

# AI Provider (choose one)
ANTHROPIC_API_KEY=sk-ant-xxxxx
# GEMINI_API_KEY=your_gemini_key_here

# =============================================================================
# OPTIONAL CREDENTIALS
# =============================================================================

# WhatsApp (Playwright session path)
# WHATSAPP_SESSION_PATH=./whatsapp_session

# LinkedIn
# LINKEDIN_ACCESS_TOKEN=your_linkedin_token

# Twitter/X
# TWITTER_API_KEY=your_twitter_key
# TWITTER_API_SECRET=your_twitter_secret
# TWITTER_ACCESS_TOKEN=your_access_token
# TWITTER_ACCESS_SECRET=your_access_secret

# Banking (if supported)
# BANK_API_TOKEN=your_bank_token

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Obsidian vault path (absolute path recommended)
VAULT_PATH=./obsidian_vault

# Dry run mode (set to true for testing without executing actions)
DRY_RUN=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Watcher poll interval in seconds
WATCHER_INTERVAL=30

# Health check port
HEALTH_CHECK_PORT=8080
